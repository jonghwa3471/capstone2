extends base

block content
  form(method="POST")
    input(name="title", placeholder="글 제목", value=video.title, required)
    textarea.writing(placeholder="내용을 입력하세요.", name="writing")= video.writing
    input(
      name="hashtags",
      placeholder="해쉬태그",
      type="text",
      value=video.hashtags.join(),
      required
    )
    input(value="수정", type="submit")
