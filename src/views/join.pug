extends base

block content
  if errorMessage
    span= errorMessage
  form(method="POST")
    input(placeholder="닉네임", name="nickname", type="text", required)
    input(placeholder="이메일", name="email", type="email", required)
    input(placeholder="아이디", name="id", type="text", required)
    input(placeholder="비밀번호", name="password", type="password", required)
    input(placeholder="비밀번호 확인", name="password2", type="password", required)
    input(type="submit", value="회원가입")
    include partials/social-login
  .auth-switch
    span 계정이 있으신가요?&nbsp;
    a(href="/login") 로그인하기 &rarr;
