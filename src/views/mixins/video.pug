mixin video(video)
  a.video-mixin(href=`/videos/${video.id}`)
    .video-mixin__thumb(
      style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center;`
    )
    .data-wrapper
      .video-mixin__profile(
        style="display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 5px"
      )
        if video.owner.avatarUrl
          img.header__avatar(src=`${video.owner.avatarUrl}`)
        else
          span.header__icon ðŸ˜ƒ
        span(style="font-size: 12px; color: #1c4ed8; font-weight: 900") #{ video.owner.nickname }
      .video-mixin__data
        span.video-mixin__title #{ video.title }&nbsp;
          span #{ video.owner.name } â€¢&nbsp;
          span.video-mixin__views
            i.fa-regular.fa-eye &nbsp;
            span #{ video.meta.views } &nbsp;
        h6
          span(style="font-size: 10px; color: gray") #{ video.createdAt.toLocaleDateString("ko-kr", { weekday: "long", year: "numeric", month: "long", day: "numeric" }) }
        h6
          span(style="font-size: 12px; color: #1c4ed8") #{ video.hashtags }
